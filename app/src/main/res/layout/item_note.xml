<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/color_white"
    >

    <LinearLayout
        android:id="@+id/ll_item_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <CheckBox
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_gravity="center_vertical"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/bg_check"
            android:layout_centerVertical="true"
            android:id="@+id/cb_check"
            android:layout_alignParentLeft="true"
            android:visibility="visible"
            android:button="@null"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/b20"
            android:paddingTop="@dimen/b20"
            android:paddingRight="@dimen/b20">

            <TextView
                android:id="@+id/tv_note_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="1111"
                android:textColor="@color/color_black"
                android:textSize="@dimen/b32"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_note_last_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2020-06-26"
                    android:textColor="@color/color_gray_bbb"
                    android:textSize="@dimen/b30" />

                <TextView
                    android:id="@+id/tv_note_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/b20"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="2020-06-26"
                    android:textColor="@color/color_gray_dd"
                    android:textSize="@dimen/b30" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/b1"
                android:layout_marginTop="@dimen/b20"
                android:background="@color/color_line" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
